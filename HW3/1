#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/wait.h>

int main(){

        pid_t pid = fork();

        if (pid < 0){
                perror("fork failed");
                exit(1);
        }
	else if (pid == 0){
                printf("Child PID = %d\n", getpid());
                printf("Child process exiting.\n");

        }
        else{
                printf("Parent waiting for child.\n");
                sleep(20);
		wait(NULL);
		printf("Parent exiting.\n")
        }

        return 0;

}
